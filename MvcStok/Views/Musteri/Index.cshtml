@using MvcStok.Models.Entity
@model List<Tbl_Musteriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get)) {
    <p>Aranacak müşteri adı: @Html.TextBox("p")
        <input type="submit" name="name" value="ara" />
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <th>@musteri.Musteriid</th>
                <td>@musteri.MusteriAd</td>
                <td>@musteri.MusteriSoyad</td>
                <td><a href="/MUSTERI/SIL/@musteri.Musteriid" class="btn btn-danger">SİL</a></td>
                <td><a href="/MUSTERI/MusteriGetir/@musteri.Musteriid" class="btn btn-success">GÜNCELLE</a></td>
                <td>@Html.ActionLink("SİL BUTONU", "SIL", new { id = musteri.Musteriid }, new { @class = "btn btn-warning", onclikc = "return confirm('Gerçekten silmek istiyor musun')" })</td>
            </tr>
            }
    </tbody>
</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>

